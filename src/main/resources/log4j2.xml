<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>

    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{-2} - %msg%n%throwable"/>
    </Console>

    <RollingFile name="FILE"
        fileName="ledgerdb-scraper.log"
        filePattern="ledgerdb-scraper.log.%d{MM-dd-yyyy}">
      <PatternLayout pattern="%d [%t] %-5level %logger{-2} - %msg%n%throwable"/>
      <Policies>
        <TimeBasedTriggeringPolicy />
      </Policies>
    </RollingFile>

  </Appenders>

  <Loggers>
    <Root level="debug">
      <AppenderRef ref="STDOUT"/>
      <AppenderRef ref="FILE"/>
    </Root>
  </Loggers>

</Configuration>
